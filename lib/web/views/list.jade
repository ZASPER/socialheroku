html
  body
    .row
      .col-md-6
        h2
          | Contacts
      .col-md-3
      .col-md-2
        a.btn.btn-default(style='margin-top:20px', href='#/new/contact') New
      .col-md-1
    .container
      table.table.table-hover
        tbody
          tr(ng-repeat="contact in contacts | orderBy:'lastName'", style='cursor:pointer')
            td
              a(ng-href='#/contact/{{contact._id}}') {{ contact.firstName }} {{ contact.lastName }}